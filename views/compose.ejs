
<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title" class="form-control-label">Title</label>
        <input type="text" class="form-control" name="postTitle" id="title">
    </div>
    <div class="form-group">
        <label for="desc" class="form-control-label">Post</label>
        <textarea type="text" class="form-control" name="postDesc" id="desc" rows="5"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>